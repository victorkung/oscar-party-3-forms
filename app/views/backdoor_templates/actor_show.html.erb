<h1>Edit Actor #<%= @the_actor.id %></h1>

<p>
  <a href="/actors/<%= @the_actor.id %>" target="_blank">View Actor Details</a>
</p>

<form action="/backdoor/modify_actor/<%= @the_actor.id %>" method="post">
  <div>
    <label for="actor_first_name_box">Actor First Name</label>
    <input type="text" id="actor_first_name_box" name="query_first_name" value="<%= @the_actor.first_name %>">
  </div>

  <div>
    <label for="actor_last_name_box">Actor Last Name</label>
    <input type="text" id="actor_last_name_box" name="query_last_name" value="<%= @the_actor.last_name %>">
  </div>

  <div>
    <label for="actor_dob">Date of Birth</label>
    <input type="date" id="actor_dob" name="query_dob" value="<%= @the_actor.dob %>">
  </div>

  <div>
    <label for="actor_bio">Bio</label>
    <textarea id="actor_bio" name="query_bio" rows="3"><%= @the_actor.bio %></textarea>
  </div>

  <div>
    <label for="actor">Image URL</label>
    <input type="text" id="actor_image" name="query_image" value="<%= @the_actor.image %>">
  </div>

  <button type="submit">
    Update Actor
  </button>
</form>
